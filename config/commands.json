{
    "bedroom": {
        "light-bed": {
            "power": {
                "on": "tdtool -n 3",
                "off": "tdtool -f 3"
            }
        }
    },
    "kid": {
        "light-corner": {
            "power": {
                "on": "tdtool -n 4",
                "off": "tdtool -f 4"
            }
        }
    },
    "salon": {
        "amplituner": {
            "power": {
                "off": "irsend send_once amplituner power-off",
                "on": "irsend send_once amplituner power-on"
            },
            "source": {
                "cd": "irsend send_once amplituner source-cd",
                "tv": "irsend send_once amplituner source-tv",
                "vcr": "irsend send_once amplituner source-vcr"
            },
            "volume": {
                "down": "irsend send_once amplituner volume-down",
                "mute": "irsend send_once amplituner volume-mute",
                "up": "irsend send_once amplituner volume-up"
            }
        },
        "dreambox": {
            "power": {
                "off": "wget -O /dev/null http://192.168.1.128/web/powerstate?newstate=0",
                "on": "wget -O /dev/null http://192.168.1.128/web/powerstate?newstate=4"
            }
        },
        "extention-cord-1": {
            "power": {
                "off": "wget -O /dev/null http://localhost:8083/ZWaveAPI/Run/devices[4].instances[2].SwitchBinary.Set(0)",
                "on": "wget -O /dev/null http://localhost:8083/ZWaveAPI/Run/devices[4].instances[2].SwitchBinary.Set(255)"
            }
        },
        "extension-cord-2": {
            "power": {
                "off": "wget -O /dev/null http://localhost:8083/ZWaveAPI/Run/devices[4].instances[1].SwitchBinary.Set(0)",
                "on": "wget -O /dev/null http://localhost:8083/ZWaveAPI/Run/devices[4].instances[1].SwitchBinary.Set(255)"
            }
        },
        "internet-radio": {
            "power": {
                "off": "mpc stop",
                "on": "mpc play 11"
            },
            "station-genre": {
                "chillout": "mpc play 9",
                "dancehall": "mpc play 5",
                "dnb": "mpc play 15",
                "dubstep": "mpc play 14",
                "electro": "mpc play 10",
                "hiphop": "mpc play 1",
                "jazz": "mpc play 2",
                "reggae": "mpc play 6"
            }
        },
        "light-corner": {
            "power": {
                "off": "tdtool -f 1",
                "on": "tdtool -n 1"
            }
        },
        "light-gallery": {
            "power": {
                "off": "tdtool -f 2",
                "on": "tdtool -n 2"
            }
        },
        "light-table-big": {
            "power": {
                "off": "curl -s -LN --globoff 'http://localhost:8083/ZWaveAPI/Run/devices[3].instances[2].SwitchBinary.Set(0)'",
                "on": "curl -s -LN --globoff 'http://localhost:8083/ZWaveAPI/Run/devices[3].instances[2].SwitchBinary.Set(255)'"
            }
        },
        "light-table-small": {
            "power": {
                "off": "curl -s -LN --globoff 'http://localhost:8083/ZWaveAPI/Run/devices[3].instances[1].SwitchBinary.Set(0)'",
                "on": "curl -s -LN --globoff 'http://localhost:8083/ZWaveAPI/Run/devices[3].instances[1].SwitchBinary.Set(255)'"
            }
        },
        "light-window": {
            "power": {
                "off": "tdtool -f 1",
                "on": "tdtool -n 1"
            }
        },
        "tv": {
            "power": {
                "off": "irsend SEND_ONCE PanasonicTV TVPOWEROFF",
                "on": "irsend SEND_ONCE PanasonicTV TVPOWERON --count=10"
            },
            "source": {
                "av1": "irsend send_once PanasonicTV TVAV1",
                "av2": "irsend send_once PanasonicTV TVAV2",
                "av3": "irsend send_once PanasonicTV TVAV3",
                "hdmi1": "irsend send_once PanasonicTV TVHDMI1",
                "hdmi2": "irsend send_once PanasonicTV TVHDMI2",
                "hdmi3": "irsend send_once PanasonicTV TVHDMI3",
                "pc": "irsend send_once PanasonicTV TVPC"
            },
            "volume": {
                "down": "irsend send_once PanasonicTV TVVOLDWN",
                "mute": "irsend send_once PanasonicTV TVMUTE",
                "up": "irsend send_once PanasonicTV TVVOLUP"
            }
        }
    }
}
